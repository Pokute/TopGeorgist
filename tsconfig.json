{
	"compilerOptions": {
		"outDir": "./compiled/",
		"sourceMap": true,
		"strictNullChecks": true,
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"jsx": "react",
		"target": "ES2024",
		"strict": true,
        "lib": [
            "ES2021",
			"DOM"
        ],
        "resolveJsonModule": true,
		"rootDir": "",
		"verbatimModuleSyntax": true,
		"rewriteRelativeImportExtensions": true,
		"allowImportingTsExtensions": true
	},
	"compileOnSave": true,
	"files": [
		"./typings/global.d.ts"
	],
	"include": [
		"*",
		"actions/**/*",
		"reducers/**/*",
		"sagas/**/*",
		"stories/**/*",
		"ui/**/*",
		"utils/**/*",
		"data/**/*",
		"tests/**/*",
		"typings/**/*",
		"concerns/**/*"
],
	"exclude": [
		"node_modules"
	]
}
